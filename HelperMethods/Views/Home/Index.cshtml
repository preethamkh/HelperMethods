@model string

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<div>
    Here are the fruits:
    @foreach (var str in (string[]) ViewBag.Fruits)
    {
        <b>@str</b>
    }
</div>
<div>
    Here are the cities:
    @foreach (var str in ViewBag.Cities)
    {
        <b>@str</b>
    }
</div>
<div>
    Here is the message:
    <p>@Model</p>
</div>
</body>
</html>